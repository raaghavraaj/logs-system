<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <!-- ðŸš€ ASYNC LOGGING CONFIGURATION for High Throughput -->
    
    <!-- Console Appender -->
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>
    
    <!-- ðŸš€ ASYNC WRAPPER - Prevents logging from blocking threads -->
    <appender name="ASYNC_STDOUT" class="ch.qos.logback.classic.AsyncAppender">
        <appender-ref ref="STDOUT"/>
        <queueSize>2000</queueSize>           <!-- Large queue for burst traffic -->
        <discardingThreshold>0</discardingThreshold>  <!-- Don't discard any logs -->
        <includeCallerData>false</includeCallerData>  <!-- Faster logging -->
        <neverBlock>true</neverBlock>         <!-- Non-blocking for hot path -->
    </appender>
    
    <!-- ðŸš€ HIGH PERFORMANCE LOGGING -->
    <logger name="com.resolveai.distributor.services.DistributorServiceImpl" 
            level="INFO" additivity="false">
        <appender-ref ref="ASYNC_STDOUT"/>
    </logger>
    
    <!-- Default logger -->
    <root level="INFO">
        <appender-ref ref="ASYNC_STDOUT"/>
    </root>
    
    <!-- ðŸš€ PROFILE-SPECIFIC CONFIGURATION -->
    <springProfile name="production">
        <logger name="com.resolveai" level="WARN"/>
    </springProfile>
    
    <springProfile name="development">
        <logger name="com.resolveai" level="DEBUG"/>
    </springProfile>
</configuration>
